<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title> Login</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100;400&display=swap&family=Abril+Fatface&display=swap" rel="stylesheet">
      
        
        <link rel="stylesheet" href="userAuthPages.css">
        <link rel="stylesheet" href="login.css">
        <link rel="stylesheet" href="navbar.css">

    </head>
    <body class="body">

        <div class="top-bar">
            <header>
              <h1>Borgin and Burkes</h1>
            </header>
            
            <nav>
      
                <div class="nav-links">
                    
                    <a href="/">
                        <i class="fa-solid fa-house" style="color: #000000;"></i>
                        Home
                    </a>
        
                    <a href="/">
                        <i class="fa-solid fa-boxes-stacked" style="color: #000000;"></i>
                        Products
                    </a>
                    <a href="#">
                        <i class="fa-solid fa-circle-info" style="color: #000000;"></i>
                        About Us
        
                    </a>
                    <a href="#">
                        <i class="fa-solid fa-envelope " style="color: #000000;"></i>
                        Contact
                    </a>
                </div>
            </nav>  
        </div>    

        

        <div class="content login-box "> 
                 
            <h1 class="heading centre-align">Welcome </h1> 

            <form class="centre-align " action="/login" method="POST">
                <div class="form-components">
                    <i class="fa-solid fa-user" style="color: #ffffff; font-size: 1.5rem;"></i>
                    <label for="username">Username:</label>
                    <input type="email" name="username" placeholder="email">
                    
                </div>
                <div class="form-components">
                    <i class="fa-solid fa-unlock-keyhole" style="color: #ffffff; font-size: 1.5rem;"></i>
                    <label for="password">Password:</label>
                    <input type="password" name="password" placeholder="Password">
                
                </div>
                
                <% if (messages.error) { %>
                    <div class="message"> <%= messages.error %> </div>
                <% } %>
                    
                <% if (messages.success) { %>
                    <div class="message"> <%=messages.success %></div>
                <% } %>

                <button class="submit-btn login-btn" type="submit">Log In</button>
            </form>

            <div class="links-section">
                <a class="links" href="/register">Sign Up</a>
                <a class="links" href="user/reset-password">Forgot Password?</a>
            </div>
        </div>


    </body>
</html>