<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Signup</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100;400&display=swap&family=Abril+Fatface&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="userAuthPages.css">
        <link rel="stylesheet" href="register.css">
        <link rel="stylesheet" href="navbar.css">
    </head>

    <body class="body">

        <div class="top-bar">
            <header>
              <h1>Borgin and Burkes</h1>
            </header>
            
            <nav>
      
                <div class="nav-links">
                    
                    <a href="/">
                        <i class="fa-solid fa-house" style="color: #000000;"></i>
                        Home
                    </a>
        
                    <a href="/">
                        <i class="fa-solid fa-boxes-stacked" style="color: #000000;"></i>
                        Products
                    </a>
                    <a href="#">
                        <i class="fa-solid fa-circle-info" style="color: #000000;"></i>
                        About Us
        
                    </a>
                    <a href="#">
                        <i class="fa-solid fa-envelope " style="color: #000000;"></i>
                        Contact
                    </a>
                </div>
            </nav>  
        </div>    

        <div class="content flexbox" >

          
            <div class="error-section">

                <% if (messages.error) { %>
                    <div class="message"> <%= messages.error %> </div>
                <% } %>
    
                <% if (messages.success) { %>
                    <div class="message"> <%=messages.success %></div>
                <% } %>

                <% if (messages.emailError) { %>
                    <div class="message"> <%= messages.emailError %> </div>
                    <br>
                    <div>
                        Click on the login button to login using the same email id.
                    </div>
                <% } %>
            </div>

            <div class="signup-section"> 

                <h1 class="heading centre-align">Sign Up</h1>

                <form class="centre-align" action="/register" method="POST">
    
                    <div class="form-components">
                        <label for="firstname">First Name<span style="color: rgb(238, 238, 29);">*</span> :</label>
                        <input type="text" name="firstname" placeholder="First Name">
                    </div>
                    
                    <div class="form-components">
                        <label for="lastname">Last Name :</label>
                        <input type="text" name="lastname" placeholder="Last Name">
                    </div>
                    
                    <div class="form-components">
                        <label for="dob">Date Of Birth :</label>
                        <input type="date" name="dob">
                    </div>
                    
                    <div class="form-components">
                        <label for="username">Username<span style="color: rgb(238, 238, 29);">*</span> :</label>
                        <input type="email" name="username" placeholder="E-mail">
                    </div>
                    
                    <div class="form-components">
                        <label for="password">Password<span style="color: rgb(238, 238, 29);">*</span> :</label>
                        <input type="password" name="password" placeholder="Password">
                    </div>
                    
    
                    <button class="submit-btn" type="submit">Create Account</button>

                    <div> Existing User?
                        <a class="links" href="/login"> Login</a>
                    </div>
    
                </form>
            </div>
        </div>
        

        <script src="" async defer></script>
    </body>
</html>